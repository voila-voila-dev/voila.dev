{
	"name": "voila.dev",
	"version": "1.0.0",
	"packageManager": "bun@1.3.2",
	"engines": {
		"bun": "1.3.2",
		"node": "22.21.1"
	},
	"workspaces": [
		"packages/*",
		"scripts/*",
		"projects/*/apps/*",
		"projects/*/packages/*"
	],
	"catalog": {
		"@types/bun": "^1.3.2",
		"@types/node": "^22.18.10",
		"typescript": "^5.9.3"
	},
	"catalogs": {
		"ui": {
			"@tailwindcss/cli": "^4.1.17",
			"@tailwindcss/vite": "^4.1.17",
			"@types/react": "^19.2.5",
			"@types/react-dom": "^19.2.3",
			"react": "^19.2.0",
			"react-dom": "^19.2.0",
			"tailwindcss": "^4.1.17",
			"typescript": "^5.9.3"
		}
	},
	"scripts": {
		"ui.voila.dev:dev": "turbo run dev dev:styles dev:themes dev:components --filter @ui.voila.dev/ui.voila.dev...",
		"ui.voila.dev:build": "turbo run build build:styles build:themes build:components --filter @ui.voila.dev/ui.voila.dev...",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"check": "biome check --write",
		"check-types": "turbo run check-types",
		"build": "turbo run build",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:release:ui": "bun run --filter @voila.dev/ui build && "
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@changesets/cli": "^2.27.9",
		"lefthook": "^2.0.4",
		"turbo": "^2.6.1"
	},
	"patchedDependencies": {
		"@base-ui-components/utils@0.1.2": "patches/@base-ui-components%2Futils@0.1.2.patch",
		"@base-ui-components/react@1.0.0-beta.4": "patches/@base-ui-components%2Freact@1.0.0-beta.4.patch"
	}
}
